<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_app"
    tools:context=".SignUpActivity">

    <View
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:alpha="0.2"
        android:background="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:fontFamily="serif"
        android:text="UimiHn"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="At"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="HOME"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/email_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="40dp"
        android:textColorHint="#948E8E">

        <EditText
            android:id="@+id/edt_dkyTK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@drawable/vien_login"
            android:drawableLeft="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:hint="Số điện thoại"
            android:textColor="#FFFFFF"
            android:textColorHint="#929090"
            android:textSize="20sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_til"
        android:layout_alignStart="@+id/email_til"
        android:layout_alignLeft="@+id/email_til"
        android:layout_alignEnd="@+id/email_til"
        android:layout_alignRight="@+id/email_til"
        android:layout_marginTop="8dp"
        android:textColorHint="#9e9e9e">

        <EditText
            android:id="@+id/edt_dkyMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:alpha="0.8"
            android:background="@drawable/vien_login"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textColorHint="#929090"
            android:textSize="20sp" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnDK"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_til"
        android:layout_alignStart="@+id/password_til"
        android:layout_alignLeft="@+id/password_til"
        android:layout_alignEnd="@+id/password_til"
        android:layout_alignRight="@+id/password_til"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:alpha="1"
        android:background="@drawable/vien_dk"
        android:text="Đăng ký"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>